{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "description": "本文（最大7行、箇条書き）"
    },
    "event_period": {
      "type": "string",
      "description": "イベントや対象期間（あれば）"
    },
    "deadline": {
      "type": "string",
      "description": "申込締切や注意すべき日付（あれば）"
    },
    "notes": {
      "type": "string",
      "description": "その他の注意点や備考（任意）"
    }
  },
  "required": ["summary"]
}
